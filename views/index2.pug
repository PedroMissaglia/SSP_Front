
extends layout

block content
  body.hold-transition.sidebar-mini.layout-fixed
    .wrapper
      // Navbar 
      nav.main-header.navbar.navbar-expand.navbar-primary.navbar-dark.border-0
        // Left navbar links 
        ul.navbar-nav
          li.nav-item
            a.nav-link(data-widget='pushmenu', href='#')
              i.fas.fa-bars
          li.nav-item.d-none.d-sm-inline-block
            a.nav-link(href='home') Home
          li.nav-item.d-none.d-sm-inline-block
            a.nav-link(href='profile') Contact
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link.fas.fa-sign-out-alt(href='/')  
      // Main Sidebar Container 
      aside.main-sidebar.sidebar-light-primary.elevation-4
        // Brand Logo 
        a.brand-link.navbar-primary(href='home')
          img.brand-image.img-circle.elevation-3(src='stylesheets/admin-lte/dist/img/AdminLTELogo.png', alt='AdminLTE Logo', style='opacity: .8')
          span.brand-text.font-weight-light Vision
        // Sidebar 
        .sidebar
          // Sidebar user (optional) 
          .user-panel.mt-3.pb-3.mb-3.d-flex
            .image
              img.img-circle.elevation-2(src='stylesheets/admin-lte/dist/img/user2-160x160.jpg', alt='User Image')
            .info
              p.d-block(id="nameUser" href='profile')
          // Sidebar Menu 
          nav.mt-2
            ul.nav.nav-pills.nav-sidebar.flex-column(data-widget='treeview', role='menu', data-accordion='false')
              //                 Add icons to the links using the .nav-icon class
                               with font-awesome or any other icon font library 
              li.nav-item.has-treeview
                a.nav-link(href='home')
                  i.nav-icon.fas.fa-chart-line
                  p
                    | Home
              li.nav-item.has-treeview
                a.nav-link(href='products')
                  i.nav-icon.fas.fa-box-open
                  p
                    | Estoque 
              li.nav-item.has-treeview
                a.nav-link(href='purchases')
                  i.nav-icon.fas.fa-shopping-bag
                  p
                    | Compras
              li.nav-item.has-treeview
                a.nav-link(href='sales')
                  i.nav-icon.fas.fa-cash-register
                  p
                    | Vendas                             
      .content-wrapper
        // Content Header (Page header) 
        .content-header
          .container-fluid
            .row.mb-2
              // /.col 
            // /.row 
          // /.container-fluid 
        // /.content-header 
        // Main content 
        section.content
          .container-fluid
            // Small boxes (Stat box) 
            .row
              // Left col 
              section.col-lg-6.connectedSortable
                // Custom tabs (Charts with tabs)
                .card.card-warning
                  .card-header
                    h3.card-title
                      i.ion.ion-clipboard.mr-1
                      | Tarefas pendentes
                    .card-tools
                      ul.pagination.pagination-sm
                      button.btn.btn-tool(type='button', data-card-widget='collapse')
                        i.fas.fa-minus
                  .card-body
                    ul.todo-list(data-widget='todo-list')
                      li
                        // drag handle 
                        span.handle
                          i.fas.fa-ellipsis-v
                          i.fas.fa-ellipsis-v
                        // checkbox 
                        .icheck-primary.d-inline.ml-2
                          input#todoCheck1(type='checkbox', name='todo1')
                          label(for='todoCheck1')
                        // todo text 
                        span.text Design a nice theme
                        // Emphasis label 
                        small.badge.badge-danger
                          i.far.fa-clock
                          | 2 mins
                        // General tools such as edit or delete
                        .tools
                          i.fas.fa-edit
                          i.fas.fa-trash
                      li
                        span.handle
                          i.fas.fa-ellipsis-v
                          i.fas.fa-ellipsis-v
                        .icheck-primary.d-inline.ml-2
                          input#todoCheck2(type='checkbox', name='todo2', checked='')
                          label(for='todoCheck2')
                        span.text Make the theme responsive
                        small.badge.badge-info
                          i.far.fa-clock
                          | 4 hours
                        .tools
                          i.fas.fa-edit
                          i.fas.fa-trash
                      li
                        span.handle
                          i.fas.fa-ellipsis-v
                          i.fas.fa-ellipsis-v
                        .icheck-primary.d-inline.ml-2
                          input#todoCheck3(type='checkbox', name='todo3')
                          label(for='todoCheck3')
                        span.text Let theme shine like a star
                        small.badge.badge-warning
                          i.far.fa-clock
                          | 1 day
                        .tools
                          i.fas.fa-edit
                          i.fas.fa-trash
                      li
                        span.handle
                          i.fas.fa-ellipsis-v
                          i.fas.fa-ellipsis-v
                        .icheck-primary.d-inline.ml-2
                          input#todoCheck4(type='checkbox', name='todo4')
                          label(for='todoCheck4')
                        span.text Let theme shine like a star
                        small.badge.badge-success
                          i.far.fa-clock
                          | 3 days
                        .tools
                          i.fas.fa-edit
                          i.fas.fa-trash
                      li
                        span.handle
                          i.fas.fa-ellipsis-v
                          i.fas.fa-ellipsis-v
                        .icheck-primary.d-inline.ml-2
                          input#todoCheck5(type='checkbox', name='todo5')
                          label(for='todoCheck5')
                        span.text Check your messages and notifications
                        small.badge.badge-primary
                          i.far.fa-clock
                          | 1 week
                        .tools
                          i.fas.fa-edit
                          i.fas.fa-trash
                      li
                        span.handle
                          i.fas.fa-ellipsis-v
                          i.fas.fa-ellipsis-v
                        .icheck-primary.d-inline.ml-2
                          input#todoCheck6(type='checkbox', name='todo6')
                          label(for='todoCheck6')
                        span.text Let theme shine like a star
                        small.badge.badge-secondary
                          i.far.fa-clock
                          | 1 month
                        .tools
                          i.fas.fa-edit
                          i.fas.fa-trash
                  // /.card-body 
                  .card-footer
                    button.btn.btn-info.float-right(type='button')
                      i.fas.fa-plus
      footer.main-footer
        .float-right.d-none.d-sm-block
          b Version 1.0
        strong
          a Vision
      // Control Sidebar 
      aside.control-sidebar.control-sidebar-dark
        // Control sidebar content goes here 
      // /.control-sidebar 
    // ./wrapper 
    script(src='stylesheets/admin-lte/plugins/jquery-ui/jquery-ui.min.js')
    // Resolve conflict in jQuery UI tooltip with Bootstrap tooltip 
    script $.widget.bridge('uibutton', $.ui.button)
    // Bootstrap 4 
    script(src='stylesheets/admin-lte/plugins/jqvmap/jquery.vmap.min.js')
    script(src='stylesheets/admin-lte/plugins/jqvmap/maps/jquery.vmap.world.js')
    // jQuery Knob Chart 
    script(src='stylesheets/admin-lte/plugins/jquery-knob/jquery.knob.min.js')
    // AdminLTE App 
    script(src='stylesheets/admin-lte/dist//js/adminlte.js')
    // AdminLTE dashboard demo (This is only for demo purposes) 
    script(src='stylesheets/admin-lte/dist//js/pages/dashboard.js')
    // AdminLTE for demo purposes 
    script(src='stylesheets/admin-lte/dist//js/demo.js')
    // Tell the browser to be responsive to screen width 
    // Tempusdominus Bbootstrap 4 
    link(rel='stylesheet', href='stylesheets/admin-lte/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css')
    // iCheck 
    link(rel='stylesheet', href='stylesheets/admin-lte/plugins/icheck-bootstrap/icheck-bootstrap.min.css')
    // JQVMap 
    link(rel='stylesheet', href='stylesheets/admin-lte/dist//css/adminlte.min.css')

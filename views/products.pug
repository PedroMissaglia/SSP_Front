
extends layout

block content
    body.hold-transition.sidebar-mini
    .wrapper
      // Navbar 
      nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
        // Left navbar links 
        ul.navbar-nav
          li.nav-item
            a.nav-link(data-widget='pushmenu', href='#')
              i.fas.fa-bars
          li.nav-item.d-none.d-sm-inline-block
            a.nav-link(href='home') Home
          li.nav-item.d-none.d-sm-inline-block
            a.nav-link(href='profile') Contact 
      // Main Sidebar Container 
      aside.main-sidebar.sidebar-dark-primary.elevation-4
        // Brand Logo 
        a.brand-link(href='../../index3.html')
          img.brand-image.img-circle.elevation-3(src='stylesheets/admin-lte/dist/img/AdminLTELogo.png', alt='AdminLTE Logo', style='opacity: .8')
          span.brand-text.font-weight-light Vision
        // Sidebar 
        .sidebar
          // Sidebar user (optional) 
          .user-panel.mt-3.pb-3.mb-3.d-flex
            .image
              img.img-circle.elevation-2(src='stylesheets/admin-lte/dist/img/user2-160x160.jpg', alt='User Image')
            .info
              p.d-block(id="nameUser" href='profile')
          // Sidebar Menu 
          nav.mt-2
            ul.nav.nav-pills.nav-sidebar.flex-column(data-widget='treeview', role='menu', data-accordion='false')
              //                 Add icons to the links using the .nav-icon class
                               with font-awesome or any other icon font library 
              li.nav-item.has-treeview
                a.nav-link(href='home')
                  i.nav-icon.fas.fa-chart-line
                  p
                    | Dashboard
              li.nav-item.has-treeview.menu-open
                a.nav-link.active(href='#')
                  i.nav-icon.fas.fa-box-open
                  p
                    | Produto   
        // /.sidebar-menu 
        // /.sidebar 
      // Content Wrapper. Contains page content 
      .content-wrapper
        // Content Header (Page header) 
        section.content-header
          .container-fluid
            .row.mb-2
              .col-sm-6
                h1 Consulta de Produtos
          // /.container-fluid 
        // Main content 
        section.content
          .container-fluid                     
            .row
              .col-12
                .card
                  .card-header
                    h3.card-title Lista de Produtos Cadastrados
                    .card-tools
                      .input-group.input-group-sm(style='width: 150px;')
                        input.form-control.float-right(type='text', name='table_search', placeholder='Search')
                        .input-group-append
                          button.btn.btn-default(type='submit')
                            i.fas.fa-search
                  // /.card-header 
                  .card-body.table-responsive.p-0(style='height: 300px;')
                    table.table.table-head-fixed
                      thead
                        tr
                          th Código
                          th Descrição
                          th Custo
                          th Saldo                                                    
                          th Controle de Endereço
                          th Controle de Lote
                          th Unidade de Medida
                          th Armazém
                      tbody(onclick='modalopen()')
                        each objeto in products
                          tr
                            th #{objeto.code}
                            th #{objeto.description}
                            th #{objeto.value}
                            th #{objeto.quantity}                                                        
                            th(onload='checkmark()') #{objeto.address_control}
                            th(onload='checkmark()') #{objeto.batch_control}
                            th #{objeto.unity_mesure}
                            th #{objeto.warehouse}

      footer.main-footer
        .float-right.d-none.d-sm-block
          b Version 1.0
        strong
          a Vision
      // Control Sidebar 
      aside.control-sidebar.control-sidebar-dark
    // ./wrapper 
    // REQUIRED SCRIPTS 
    // jQuery 
    script(src='stylesheets/admin-lte/plugins/jquery/jquery.min.js')
    // Bootstrap 
    script(src='stylesheets/admin-lte/plugins/bootstrap/js/bootstrap.bundle.min.js')
    // overlayScrollbars 
    script(src='stylesheets/admin-lte/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js')
    // AdminLTE App 
    script(src='stylesheets/admin-lte/dist/js/adminlte.js')
    // OPTIONAL SCRIPTS 
    script(src='stylesheets/admin-lte/dist/js/demo.js')
    // PAGE PLUGINS 
    // jQuery Mapael 
    script(src='stylesheets/admin-lte/plugins/jquery-mousewheel/jquery.mousewheel.js')
    script(src='stylesheets/admin-lte/plugins/raphael/raphael.min.js')
    script(src='stylesheets/admin-lte/plugins/jquery-mapael/jquery.mapael.min.js')
    script(src='stylesheets/admin-lte/plugins/jquery-mapael/maps/world_countries.min.js')
    // ChartJS 
    script(src='stylesheets/admin-lte/plugins/chart.js/Chart.min.js')
    // PAGE SCRIPTS 
    script(src='stylesheets/admin-lte/dist/js/pages/dashboard2.js')      
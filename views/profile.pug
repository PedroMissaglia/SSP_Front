extends layout

block content
  body.hold-transition.sidebar-mini
    .wrapper
      // Navbar 
      nav.main-header.navbar.navbar-expand.navbar-primary.navbar-dark.border-0
        // Left navbar links 
        ul.navbar-nav
          li.nav-item
            a.nav-link(data-widget='pushmenu', href='#')
              i.fas.fa-bars
          li.nav-item.d-none.d-sm-inline-block
            a.nav-link(href='home') Home
          li.nav-item.d-none.d-sm-inline-block
            a.nav-link(href='#') Perfil
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link.fas.fa-sign-out-alt(href='/')  
      aside.main-sidebar.sidebar-light-primary.elevation-4
        // Brand Logo 
        a.brand-link.navbar-primary(href='home')
          img.brand-image.img-circle.elevation-3(src='stylesheets/admin-lte/dist/img/logo.png', alt='Vision Logo')
          span.brand-text.font Vision
        // Sidebar 
        .sidebar
          // Sidebar user (optional) 
          .user-panel.mt-3.pb-3.mb-3.d-flex
            .image
              img.img-circle.elevation-2(src='stylesheets/admin-lte/dist/img/user2-160x160.jpg', alt='User Image')
            .info
              p.d-block(id="nameUser" href='profile')
          // Sidebar Menu 
          nav.mt-2
            ul.nav.nav-pills.nav-sidebar.flex-column(data-widget='treeview', role='menu', data-accordion='false')
              //                 Add icons to the links using the .nav-icon class
                               with font-awesome or any other icon font library 
              li.nav-item.has-treeview
                a.nav-link(href='home')
                  i.nav-icon.fas.fa-home
                  p
                    | Home
              li.nav-item.has-treeview
                a.nav-link(href='products')
                  i.nav-icon.fas.fa-box-open
                  p
                    | Estoque 
              li.nav-item.has-treeview
                a.nav-link(href='purchases')
                  i.nav-icon.fas.fa-shopping-bag
                  p
                    | Compras
              li.nav-item.has-treeview
                a.nav-link(href='sales')
                  i.nav-icon.fas.fa-cash-register
                  p
                    | Vendas              
          // /.sidebar-menu 
        // /.sidebar 
      // Content Wrapper. Contains page content 
      .content-wrapper
        // Content Header (Page header) 
        section.content-header
          .container-fluid
            .row.mb-2
          // /.container-fluid 
        // Main content 
        section.content
          .container-fluid
            .row
              .col-md-3
                // Profile Image 
                .card.card-primary.card-outline
                  .card-body.box-profile
                    .text-center
                      img.profile-user-img.img-fluid.img-circle(src='stylesheets/admin-lte/dist/img/user2-160x160.jpg', alt='User Image')
                    h3.profile-username.text-center #{user.name}
                    p.text-muted.text-center #{user.email}
                  // /.card-body 
                // /.card 
                // About Me Box 
                // /.card 
              // /.col 
              .col-md-9
                .card
                  .card-header.p-2
                    ul.nav.nav-pills
                      li.nav-item
                        a.nav-link.active(href='#Editprofile' data-toggle='tab') Editar perfil
                  // /.card-header 
                  .card-body
                    .tab-content
                      .active.tab-pane#Editprofile
                        form.form-horizontal(name ="ProfileForm" action="javascript:profileForm()"  id="error")
                          .form-group
                            label.col-sm-2.control-label(for='inputName') Nome
                            .input-group.mb-3
                              input.form-control(id="1" type='text', placeholder=`${user.name}`)
                              .input-group-append
                                span.input-group-text
                                  i.fas.fa-user-circle
                            label.col-sm-2.control-label(for='inputCPF') CPF
                            .input-group.mb-3
                              input.form-control(id="2" name ="cpf" type='text', placeholder=`${user.cpf}` onBlur="javascript:ValidarCPF(ProfileForm.cpf)" onKeyPress="javascript:MascaraCPF(ProfileForm.cpf)" maxlength="14")
                              .input-group-append
                                span.input-group-text
                                  i.fas.fa-id-card
                            label.col-sm-4.control-label(for='inputDate', placeholder=`${user.birthdate}`) Data de nascimento
                            .input-group.mb-3
                              input.form-control(id="3" type='date', placeholder='Data de nascimento')
                              .input-group-append
                                span.input-group-text
                                  i.fas.fa-calendar-alt
                            label.col-sm-2.control-label(for='inputEmail') Email
                            .input-group.mb-3
                              input.form-control(id="4" type='email', placeholder=`${user.email}`)
                              .input-group-append
                                span.input-group-text
                                  i.fas.fa-envelope
                            .col-sm-offset-2.col-sm-10
                              button.btn.btn-primary(type='submit') Alterar
                        p.mb-2
                          a.text-center(href='register' data-toggle='modal', data-target='#modal-default') Trocar minha senha
            .modal.fade#modal-default
              .modal-dialog
                .modal-content
                  .modal-header
                    h4.modal-title Alterar Senha
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                      span(aria-hidden='true') ×
                  .modal-body
                    form(name="sendNewPassword" action="javascript:newPasswordByProfile()")
                      div(class="form-group")
                        .input-group.mb-4  
                          input.form-control(id="m1" name ="password" type='password', placeholder='Senha anterior' required)                          
                          .input-group-append
                            .input-group-text.font-size
                              span.fas.fa-lock
                        .input-group.mb-4  
                          input.form-control(id="modal2" name ="password" type='password', placeholder='Nova Senha' required)                          
                          .input-group-append
                            .input-group-text.font-size
                              span.fas.fa-lock
                        .input-group.mb-4      
                          input.form-control(id="modal3" name ="confirm_password" type='password', onBlur="javascript:validarSenhaProfile()" placeholder='Confirmação de Senha' required)
                          .input-group-append
                            .input-group-text.font-size
                              span.fas.fa-lock            
                      button(class="btn btn-primary" type="submit") Enviar
                      // /.tab-pane 
                    // /.tab-content 
                  // /.card-body 
                // /.nav-tabs-custom 
              // /.col 
            // /.row 
          // /.container-fluid 
        // /.content 
      // /.content-wrapper 
      footer.main-footer
        .float-right.d-none.d-sm-block
          b Version 1.0
        strong
          a Vision
      // Control Sidebar 
      aside.control-sidebar.control-sidebar-dark
        // Control sidebar content goes here 
      // /.control-sidebar 
    // ./wrapper
    script.
     var a = nameUserProfile();
     document.getElementById("nameUser").innerHTML = a;
    link(rel='stylesheet', href='stylesheets/admin-lte/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css')
    link(rel='stylesheet', href='stylesheets/admin-lte/dist//css/adminlte.min.css') 
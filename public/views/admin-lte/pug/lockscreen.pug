    link(rel='stylesheet', href='../../dist/css/adminlte.min.css')
    // Google Font: Source Sans Pro 
    link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700', rel='stylesheet')
  body.hold-transition.lockscreen
    // Automatic element centering 
    .lockscreen-wrapper
      .lockscreen-logo
        a(href='../../index2.html')
          b Admin
          | LTE
      // User name 
      .lockscreen-name John Doe
      // START LOCK SCREEN ITEM 
      .lockscreen-item
        // lockscreen image 
        .lockscreen-image
          img(src='../../dist/img/user1-128x128.jpg', alt='User Image')
        // /.lockscreen-image 
        // lockscreen credentials (contains the form) 
        form.lockscreen-credentials
          .input-group
            input.form-control(type='password', placeholder='password')
            .input-group-append
              button.btn(type='button')
                i.fas.fa-arrow-right.text-muted
        // /.lockscreen credentials 
      // /.lockscreen-item 
      .help-block.text-center Enter your password to retrieve your session
      .text-center
        a(href='login.html') Or sign in as a different user
